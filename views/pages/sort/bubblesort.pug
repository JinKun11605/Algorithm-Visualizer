extends ../../layouts/default.pug

block main
    .container
        h1.text-center.mt-5 Bubble Sort
        .mt-4
            form(action="/sort/bubblesort" method="POST")
                label(for="numbers-input") Nhập các số, cách nhau bằng dấu phẩy:
                input(
                    id="numbers-input" 
                    name="numbers_input" 
                    class="form-control" 
                    type="text" 
                    placeholder="Ví dụ: 5, 3, 8, 4, 2"
                )
                button(
                    class="btn btn-secondary mt-3" 
                    type="submit"
                ) Xác nhận

        .mt-4
            #visualization
                if numbersArray && numbersArray.length > 0
                    each number in numbersArray
                        .block= number
                else
                    p Nhập vào các số cần sắp xếp
        
        button(
            class="btn btn-primary mt-3" 
            id="sortButton"
        ) Bắt Đầu Sắp Xếp
        
    script(src="/js/bubblesort.js")
